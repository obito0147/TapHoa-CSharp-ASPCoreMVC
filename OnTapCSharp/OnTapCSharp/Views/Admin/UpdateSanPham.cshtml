@model OnTapCSharp.ViewModel.HangHoaVM
@{
    Layout = "_LayoutAdmin";
}
<form asp-action="UpdateSanPham" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <div>
        <div class="col-md-12 col-lg-6">
            <div class="form-item w-100">
                <label class="form-label my-3">Mã hàng hóa</label><sup>*</sup>
                <input asp-for="@Model.MaHH" type="text" class="form-control" readonly>
                <span asp-validation-for="@Model.MaHH" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12 col-lg-6">
            <div class="form-item w-100">
                <label class="form-label my-3">Tên hàng hóa</label><sup>*</sup>
                <input asp-for="@Model.TenHH" type="text" class="form-control">
                <span asp-validation-for="@Model.TenHH" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12 col-lg-6">
            <div class="form-item w-100">
                <label class="form-label my-3">Hình ảnh</label><sup>*</sup>
                <input type="hidden" name="Hinh" value="@Model.Hinh">
                <input name="Hinh" type="file" class="form-control"> 
            </div>
        </div>
        <div class="col-md-12 col-lg-6">
            <div class="form-item w-100">
                <label class="form-label my-3">Đơn giá</label><sup>*</sup>
                <input asp-for="@Model.DonGia" type="number" class="form-control">
                <span asp-validation-for="@Model.DonGia" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12 col-lg-6">
            <div class="form-item w-100">
                <label class="form-label my-3">Mô tả ngắn</label><sup>*</sup>
                <input asp-for="@Model.MoTaNgan" type="text" class="form-control">
                <span asp-validation-for="@Model.MoTaNgan" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12 col-lg-6">
            <div class="form-item w-100">
                <label class="form-label my-3">Tên loại</label><sup>*</sup>
                <!-- Sửa ViewBag.HieuLuc thành ViewBag.LoaiSanPham -->
                <select asp-for="@Model.TenLoai" class="form-control" asp-items="ViewBag.LoaiSanPham"></select>
                <span asp-validation-for="@Model.TenLoai" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>