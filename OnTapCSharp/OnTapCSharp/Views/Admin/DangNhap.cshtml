@model OnTapCSharp.ViewModel.LoginAdminVM
@{
    Layout = "_LayoutAdmin";
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng nhập cho nhân viên</h1>
        <form asp-action="DangNhap" asp-controller="Admin">
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.email" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.email" type="text" class="form-control">
                            <span asp-validation-for="@Model.email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.password" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.password" type="password" class="form-control">
                            <span asp-validation-for="@Model.password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng nhập</button>
            </div>
        </form>
    </div>
</div>
