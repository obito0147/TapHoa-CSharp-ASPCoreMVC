@model OnTapCSharp.ViewModel.KhachHangVM
@{
    Layout = "_LayoutAdmin";
}
<form asp-action="BlockKhachHang" asp-controller="Admin"> 
<div>
    <div class="col-md-12 col-lg-6">
        <div class="form-item w-100">
            <label class="form-label my-3">Mã khách hàng</label><sup>*</sup>
            <input asp-for="@Model.MaKh" type="text" class="form-control" readonly>
            <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12 col-lg-6">
        <div class="form-item w-100">
            <label class="form-label my-3">Họ tên</label><sup>*</sup>
            <input asp-for="@Model.HoTen" type="text" class="form-control">
            <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12 col-lg-6">
        <div class="form-item w-100">
            <label class="form-label my-3">Địa chỉ</label><sup>*</sup>
            <input asp-for="@Model.DiaChi" type="text" class="form-control">
            <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12 col-lg-6">
        <div class="form-item w-100">
            <label class="form-label my-3">Điện thoại</label><sup>*</sup>
            <input asp-for="@Model.DienThoai" type="number" class="form-control">
            <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12 col-lg-6">
        <div class="form-item w-100">
            <label class="form-label my-3">Email</label><sup>*</sup>
            <input asp-for="@Model.Email" type="text" class="form-control">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12 col-lg-6">
        <div class="form-item w-100">
            <label class="form-label my-3">Hiệu lực</label><sup>*</sup>
                <select asp-for="@Model.HieuLuc" class="form-control" asp-items="ViewBag.HieuLuc"></select>
            <span asp-validation-for="@Model.HieuLuc" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
</form>